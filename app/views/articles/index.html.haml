#articles-index
  %h1.text-center Listing articles
  = form_tag articles_path, method: 'get', class: 'form-inline' do
    %p
      = text_field_tag :search, params[:search], class: 'form-control'
      = submit_tag "Search", name: nil, class: 'btn btn-default'
  %table#articles-table.table.table-condensed.table-striped
    %tr
      %th= sortable "title"
      %th= sortable "text"
      %th.text-right Actions
    - @articles.each do |article|
      %tr
        %td= article.title
        %td= article.text
        %td.text-right
          = link_to article_path(article), class: 'btn btn-info btn-xs' do
            %span.glyphicon.glyphicon-ok
            Show
          = link_to edit_article_path(article), class: 'btn btn-default btn-xs' do
            %span.glyphicon.glyphicon-pencil
            Edit
          = link_to article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' do
            %span.glyphicon.glyphicon-remove
            Delete
  = will_paginate @articles, renderer: BootstrapPagination::Rails
  %p
    Average Length:
    = @average_length
  = link_to new_article_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Article
